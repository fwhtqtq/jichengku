void shuru_dontaishuzu()
{
	int size;
    printf("请输入动态数组的大小：");
    scanf("%d", &size);
    // 使用malloc函数动态分配内存
    int *array = (int *)malloc(size * sizeof(int));
    if (array == NULL) {
        printf("内存分配失败！\n");
        //return 1;
    }
    printf("请输入动态数组的元素：");
    for (int i = 0; i < size; i++)		
	{
        scanf("%d", &array[i]);
    }
    printf("动态数组的元素为：");
    for (int i = 0; i < size; i++)
	{
        printf("%d ", array[i]);
    }
    printf("\n");
	
}
